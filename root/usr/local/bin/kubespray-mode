#!/bin/bash

set -eu

source /etc/profile.d/getup.sh

mode=$(get_tf_config TERRAFORM_MODE terraform_mode '')

if [ $# -eq 0 ]; then
  echo "Current mode: $mode"
  exit
fi

case $1 in
  terraform-provision|terraform-install) : ;;
  *)
    echo "Usage: $0 [terraform-provision|terraform-install]"
    exit
esac

if grep -q '^terraform_mode.*' $TF_VARS_FILE; then
    sed -i -e "s/^terraform_mode.*/terraform_mode = \"$value\"/" $TF_VARS_FILE
elif grep -q '^#terraform_mode.*' $TF_VARS_FILE; then
    sed -i -e "s/^#terraform_mode.*/terraform_mode = \"$value\"/" $TF_VARS_FILE
else
  echo "terraform_mode = \"$value\"" >> $TF_VARS_FILE
fi

echo "Updated $TF_VARS_FILE: terraform_mode=$value"
